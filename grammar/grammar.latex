	\midrule

	\Nom & \lan{edo} & \lan{tu}
	& \lan{vi} & \lan{ju} & - \\

	\Acc & \lan{me} & \lan{tve}
	& \lan{nos} & \lan{vos} & \lan{sve} \\

	\Gen & \lan{mene} & \lan{teve}
	& \lan{ánser} & \lan{júser} & \lan{seve} \\

	\Abl & \lan{med} & \lan{tved}
	& \lan{ansmed} & \lan{usmed} & \lan{sved} \\

	\Dat & \lan{medjo} & \lan{tevjo}
	& \lan{ansmi} & \lan{usmi} & \lan{sevjo} \\

	\Loc & \lan{moi} & \lan{toi}
	& \lan{ansmi} & \lan{usmi} & \lan{soi} \\

	\Ins & \lan{moi} & \lan{toi}
