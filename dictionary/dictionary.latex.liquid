{% raw %}
\newcommand{\ipa}[1]{{\ipafont\textit{#1}}}
\newcommand{\gr}[1]{{\greekfont #1}}
\newcommand{\arab}[1]{{\arabicfont #1}}
\newcommand{\cyr}[1]{{\ipafont\textit{#1}}}
\newcommand{\key}[1]{{\textbf{#1}}}
{% endraw %}

\begin{document}
\maketitle

{% for key in keys %}
	{% assign entry = dictionary[key] %}

	{% if entry.parts == '' %}
		\key{ {{- key -}}.}
	{%- else -%}
		\key{ {{- key -}},}
		\textit{ {{- entry.parts -}}.}
	{%- endif -%}

	{% raw %} {% endraw %}

	{%- if entry.ety != '' -%}
		{\footnotesize ({{- entry.ety -}}).}
	{%- endif -%}
	{% raw %} {% endraw %}{{ entry.typ }}.

	{%- assign L = entry.defs | size -%}
	{%- if L == 1 -%}
		{% raw %} {% endraw %}{{ entry.defs[0] }}
	{%- else -%}
		{%- assign i = 0 -%}
		{%- for def in entry.defs -%}
			{% assign i = i | plus: 1 %}
			\textbf{ {{- i -}}.}~{{ def }}
		{%- endfor -%}
	{%- endif -%}
{% endfor %}

\onecolumn
\section*{Senti tosmí {{ keys | size }} verdóm!}

